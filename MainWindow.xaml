<Window x:Class="WpfThemeSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="WPF Theme Sample - Industrial Touch UI"
        Height="600" Width="900"
        Background="{DynamicResource Bg0}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_Theme">
                <MenuItem Header="Theme _A (Light Panel)" Click="ThemeA_Click"/>
                <MenuItem Header="Theme _B (Dark Steel)" Click="ThemeB_Click"/>
                <MenuItem Header="Theme _C (Blue Accent)" Click="ThemeC_Click"/>
                <MenuItem Header="Theme _D (High Contrast)" Click="ThemeD_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <TextBlock Grid.Row="0"
                          Text="Industrial Touch UI Demo"
                          FontSize="24"
                          FontWeight="Bold"
                          Foreground="{DynamicResource Text0}"
                          Margin="0,0,0,20"/>

                <!-- Buttons Section -->
                <StackPanel Grid.Row="1" Margin="0,0,0,20">
                    <TextBlock Text="Buttons:"
                              FontSize="16"
                              FontWeight="Bold"
                              Foreground="{DynamicResource Text0}"
                              Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Primary Action" Margin="0,0,10,0"/>
                        <Button Content="Secondary" Margin="0,0,10,0"/>
                        <Button Content="Disabled" IsEnabled="False"/>
                    </StackPanel>
                </StackPanel>

                <!-- CheckBox and RadioButton Section -->
                <StackPanel Grid.Row="2" Margin="0,0,0,20">
                    <TextBlock Text="CheckBox and RadioButton:"
                              FontSize="16"
                              FontWeight="Bold"
                              Foreground="{DynamicResource Text0}"
                              Margin="0,0,0,10"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <CheckBox Content="Option 1" IsChecked="True" Margin="0,0,20,0"/>
                        <CheckBox Content="Option 2" Margin="0,0,20,0"/>
                        <CheckBox Content="Disabled" IsEnabled="False"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="Choice A" GroupName="Group1" IsChecked="True" Margin="0,0,20,0"/>
                        <RadioButton Content="Choice B" GroupName="Group1" Margin="0,0,20,0"/>
                        <RadioButton Content="Choice C" GroupName="Group1"/>
                    </StackPanel>
                </StackPanel>

                <!-- TabControl Section -->
                <TabControl Grid.Row="3" Height="200" Margin="0,0,0,20">
                    <TabItem Header="Tab 1">
                        <Grid Background="{DynamicResource Bg0}">
                            <StackPanel Margin="20">
                                <TextBlock Text="Content for Tab 1"
                                          Foreground="{DynamicResource Text0}"
                                          FontSize="14"
                                          Margin="0,0,0,10"/>
                                <ListBox Height="100">
                                    <ListBoxItem Content="Item 1"/>
                                    <ListBoxItem Content="Item 2"/>
                                    <ListBoxItem Content="Item 3" IsSelected="True"/>
                                    <ListBoxItem Content="Item 4"/>
                                </ListBox>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Tab 2">
                        <Grid Background="{DynamicResource Bg0}">
                            <TextBlock Text="Content for Tab 2"
                                      Foreground="{DynamicResource Text0}"
                                      FontSize="14"
                                      Margin="20"/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Tab 3">
                        <Grid Background="{DynamicResource Bg0}">
                            <TextBlock Text="Content for Tab 3"
                                      Foreground="{DynamicResource Text0}"
                                      FontSize="14"
                                      Margin="20"/>
                        </Grid>
                    </TabItem>
                </TabControl>

                <!-- ListView Section -->
                <StackPanel Grid.Row="4">
                    <TextBlock Text="ListView with Sample Data:"
                              FontSize="16"
                              FontWeight="Bold"
                              Foreground="{DynamicResource Text0}"
                              Margin="0,0,0,10"/>
                    <ListView x:Name="SampleListView"
                             Height="200"
                             Background="{DynamicResource Bg1}"
                             BorderBrush="{DynamicResource Border0}"
                             BorderThickness="1">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" Width="80" DisplayMemberBinding="{Binding Id}"/>
                                <GridViewColumn Header="Name" Width="150" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Status" Width="100" DisplayMemberBinding="{Binding Status}"/>
                                <GridViewColumn Header="Value" Width="100" DisplayMemberBinding="{Binding Value}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
