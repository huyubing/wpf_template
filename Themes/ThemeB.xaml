<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ThemeB: Dark Steel Palette -->
    
    <!-- Color Palette -->
    <Color x:Key="Bg0Color">#1E1E1E</Color>
    <Color x:Key="Bg1Color">#2D2D30</Color>
    <Color x:Key="Border0Color">#3F3F46</Color>
    <Color x:Key="HoverColor">#3E3E42</Color>
    <Color x:Key="AccentColor">#007ACC</Color>
    <Color x:Key="AccentHiColor">#005A9E</Color>
    <Color x:Key="Text0Color">#FFFFFF</Color>
    <Color x:Key="TextSubColor">#CCCCCC</Color>
    <Color x:Key="TextOnAccentColor">#FFFFFF</Color>
    <Color x:Key="MenuBgColor">#252526</Color>

    <!-- Brush Resources -->
    <SolidColorBrush x:Key="Bg0" Color="{StaticResource Bg0Color}"/>
    <SolidColorBrush x:Key="Bg1" Color="{StaticResource Bg1Color}"/>
    <SolidColorBrush x:Key="Border0" Color="{StaticResource Border0Color}"/>
    <SolidColorBrush x:Key="Hover" Color="{StaticResource HoverColor}"/>
    <SolidColorBrush x:Key="Accent" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="AccentHi" Color="{StaticResource AccentHiColor}"/>
    <SolidColorBrush x:Key="Text0" Color="{StaticResource Text0Color}"/>
    <SolidColorBrush x:Key="TextSub" Color="{StaticResource TextSubColor}"/>
    <SolidColorBrush x:Key="TextOnAccent" Color="{StaticResource TextOnAccentColor}"/>
    <SolidColorBrush x:Key="MenuBg" Color="{StaticResource MenuBgColor}"/>

    <!-- Button Template -->
    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseButtonStyle}"/>

    <!-- CheckBox Template -->
    <Style TargetType="{x:Type CheckBox}">
        <Setter Property="Background" Value="{DynamicResource Bg1}"/>
        <Setter Property="Foreground" Value="{DynamicResource Text0}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Border0}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="4,0,0,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border x:Name="checkBorder"
                                Grid.Column="0"
                                Width="18"
                                Height="18"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                VerticalAlignment="Center">
                            <Path x:Name="checkMark"
                                  Data="M 1 4 L 4 7 L 9 1"
                                  Stroke="{DynamicResource TextOnAccent}"
                                  StrokeThickness="2"
                                  Visibility="Collapsed"
                                  Margin="2"/>
                        </Border>
                        <ContentPresenter Grid.Column="1"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"
                                        RecognizesAccessKey="True"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="checkBorder" Value="{DynamicResource Hover}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Background" TargetName="checkBorder" Value="{DynamicResource Accent}"/>
                            <Setter Property="BorderBrush" TargetName="checkBorder" Value="{DynamicResource Accent}"/>
                            <Setter Property="Visibility" TargetName="checkMark" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- RadioButton Template -->
    <Style TargetType="{x:Type RadioButton}">
        <Setter Property="Background" Value="{DynamicResource Bg1}"/>
        <Setter Property="Foreground" Value="{DynamicResource Text0}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Border0}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="4,0,0,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border x:Name="radioBorder"
                                Grid.Column="0"
                                Width="18"
                                Height="18"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="9"
                                VerticalAlignment="Center">
                            <Ellipse x:Name="radioCheck"
                                     Width="8"
                                     Height="8"
                                     Fill="{DynamicResource TextOnAccent}"
                                     Visibility="Collapsed"/>
                        </Border>
                        <ContentPresenter Grid.Column="1"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"
                                        RecognizesAccessKey="True"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="radioBorder" Value="{DynamicResource Hover}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter Property="Background" TargetName="radioBorder" Value="{DynamicResource Accent}"/>
                            <Setter Property="BorderBrush" TargetName="radioBorder" Value="{DynamicResource Accent}"/>
                            <Setter Property="Visibility" TargetName="radioCheck" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
